@page
@model MyTenantLink.Pages.Leases.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Lease</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Lease.Id" />
            <div class="form-group">
                <label asp-for="Lease.CustomerId" class="control-label">Customer</label>
                <select asp-for="Lease.CustomerId" class="form-control" asp-items="ViewBag.CustomerId"></select>
                <span asp-validation-for="Lease.CustomerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Lease.TenantId" class="control-label">Tenant</label>
                <select asp-for="Lease.TenantId" class="form-control" asp-items="ViewBag.TenantId"></select>
                <span asp-validation-for="Lease.TenantId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Lease.UnitId" class="control-label">Unit</label>
                <select asp-for="Lease.UnitId" class="form-control" asp-items="ViewBag.UnitId"></select>
                <span asp-validation-for="Lease.UnitId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Lease.Amount" class="control-label"></label>
                <input asp-for="Lease.Amount" class="form-control" />
                <span asp-validation-for="Lease.Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Lease.Balance" class="control-label"></label>
                <input asp-for="Lease.Balance" class="form-control" />
                <span asp-validation-for="Lease.Balance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary mt-3" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
