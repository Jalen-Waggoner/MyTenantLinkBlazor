@page
@model MyTenantLink.Pages.Leases.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create a Lease</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Lease.CustomerId" class="control-label">Customer</label>
                <select asp-for="Lease.CustomerId" class ="form-control" asp-items="ViewBag.CustomerId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Lease.TenantId" class="control-label">Tenant</label>
                <select asp-for="Lease.TenantId" class ="form-control" asp-items="ViewBag.TenantId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Lease.UnitId" class="control-label">Unit</label>
                <select asp-for="Lease.UnitId" class ="form-control" asp-items="ViewBag.UnitId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary mt-3" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
