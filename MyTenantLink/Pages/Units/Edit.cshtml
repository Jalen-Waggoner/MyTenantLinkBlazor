@page
@model MyTenantLink.Pages.Units.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Unit @Model.Unit.UnitCode</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Unit.Id" />
            <div class="form-group">
                <label asp-for="Unit.CustomerId" class="control-label">Customer</label>
                <select asp-for="Unit.CustomerId" class="form-control" asp-items="ViewBag.CustomerId"></select>
                <span asp-validation-for="Unit.CustomerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Unit.BuildingId" class="control-label">Building</label>
                <select asp-for="Unit.BuildingId" class="form-control" asp-items="ViewBag.BuildingId"></select>
                <span asp-validation-for="Unit.BuildingId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Unit.Rate" class="control-label"></label>
                <input asp-for="Unit.Rate" class="form-control" />
                <span asp-validation-for="Unit.Rate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Unit.UnitCode" class="control-label"></label>
                <input asp-for="Unit.UnitCode" class="form-control" />
                <span asp-validation-for="Unit.UnitCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary mt-3" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
