@page
@model MyTenantLink.Pages.Units.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create Unit</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Unit.CustomerId" class="control-label">Customer</label>
                <select asp-for="Unit.CustomerId" class ="form-control" asp-items="ViewBag.CustomerId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Unit.BuildingId" class="control-label">Building Number</label>
                <select asp-for="Unit.BuildingId" class ="form-control" asp-items="ViewBag.BuildingId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Unit.Rate" class="control-label"></label>
                <input asp-for="Unit.Rate" class="form-control" />
                <span asp-validation-for="Unit.Rate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Unit.UnitCode" class="control-label"></label>
                <input asp-for="Unit.UnitCode" class="form-control" />
                <span asp-validation-for="Unit.UnitCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
