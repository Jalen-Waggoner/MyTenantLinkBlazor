@page
@model MyTenantLink.Pages.Buildings.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Buildings</h1>

<p>
    <a class="btn btn-sm btn-success" asp-page="Create">Create New Building</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Building[0].BuildingCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Building[0].Street)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Building[0].City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Building[0].State)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Building[0].Zip)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Building[0].Customer)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Building)
        {
            <tr>
                <td>
                    <a asp-page="./Details" asp-route-id="@item.Id"> @Html.DisplayFor(modelItem => item.BuildingCode)</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Street)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.State)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Zip)
                </td>
                <td>
                    <a asp-page="/Customers/Details" asp-route-id="@item.Customer.Id">@Html.DisplayFor(modelItem => item.Customer.Name)</a>
                </td>
                <td>
                    <a class="btn btn-sm btn-primary" asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                    <a class="btn btn-sm btn-outline-danger" asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
