@page
@model MyTenantLink.Pages.Buildings.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Building</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Building.Customer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Building.Customer.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Building.BuildingCode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Building.BuildingCode)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Building.Street)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Building.Street)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Building.City)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Building.City)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Building.State)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Building.State)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Building.Zip)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Building.Zip)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-sm btn-primary"asp-page="./Edit" asp-route-id="@Model.Building?.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>

<h3 style="margin-top: 5vw;">Units</h3>

<p>
    <a class="btn btn-sm btn-success"asp-page="/Units/Create">Create New Unit</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Building.Units[0].Customer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Building.Units[0].Rate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Building.Units[0].UnitCode)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Building.Units) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Building.Units[0].Customer.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Building.Units[0].Rate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Building.Units[0].UnitCode)
            </td>
            <td>
                <a class="btn btn-sm btn-primary"asp-page="/Units/Edit" asp-route-id="@item.Id">Edit</a> |
                <a class="btn btn-sm btn-outline-danger"asp-page="/Units/Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
